<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.sbihackathon.cheque_issueance"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:layout_marginTop="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account No."
        android:textColor="@color/text_color"/>
        <Spinner
            android:layout_marginTop="@dimen/text_margin"
            android:text="Select Account:"
            android:id="@+id/cheque_issuance_acc_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/text_color"
            />

        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheques Per Book:"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/cheque_issuance_checkperbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of Books :"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/cheque_issuance_book_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick up Branch:"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/cheque_issuance_pickupbranach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <Button
        android:id="@+id/cheque_issuance_submit"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:textSize="20dp"
        android:background="@color/button_color"
        android:textColor="@color/white"/>

</LinearLayout>
