<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.nikhil.sbihackathon.fund_transfer_NEFT"
     android:layout_height="match_parent"
     android:layout_width="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Benificiary Details"
        android:background="@color/button_color"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">    <TextView
        android:layout_marginTop="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benificiary Account No."
        android:textColor="@color/text_color"/>
        <Spinner
            android:layout_marginTop="@dimen/text_margin"
            android:text="Select Account "
            android:id="@+id/fund_transfer_neft_from_acc_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/text_color"
            />

        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benificiary Name:"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/fund_transfer_neft_from_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IFSC Code:"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/fund_transfer_neft_from_ifsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile No:"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/fund_transfer_neft_from_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiver Details"
        android:background="@color/button_color"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">    <TextView
        android:layout_marginTop="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receiver Account No."
        android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/fund_transfer_neft_to_acc_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiver Name:"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/fund_transfer_neft_to_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IFSC Code:"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/fund_transfer_neft_to_ifsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
         </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:background="@color/button_color"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Amount:"
            android:textColor="@color/text_color"/>
        <EditText
            android:id="@+id/fund_transfer_neft_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/fund_transfer_neft_submit"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Payment"
            android:textSize="20dp"
            android:background="@color/button_color"
            android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>