<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.sbihackathon.transaction_status">

   <ImageView
       android:id="@+id/y"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:src="@drawable/sbi"
       android:scaleType="fitXY"
       android:layout_alignParentTop="true"/>
    <ImageView
    android:id="@+id/x"
     android:layout_marginTop="300dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/checked"
     android:layout_centerHorizontal="true"

    />
 <TextView
     android:id="@+id/z"
     android:textSize="36dp"
     android:textStyle="bold"
     android:gravity="center"
     android:text="Transaction Successful"
     android:layout_below="@id/x"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />

    <Button
        android:id="@+id/xyz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_logo"
        android:layout_below="@id/z"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
