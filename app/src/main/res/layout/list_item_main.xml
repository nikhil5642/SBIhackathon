<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_dimen">

<ImageView
    android:id="@+id/icon_list_main"
    android:layout_alignParentTop="true"
    android:padding="@dimen/text_margin"
    android:layout_width="@dimen/list_item_dimen"
    android:layout_height="@dimen/list_item_dimen" />
    <TextView
        android:layout_marginLeft="@dimen/list_item_dimen"
        android:id="@+id/title_list_main"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_margin"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="@dimen/list_item_dimen"
        android:layout_height="@dimen/list_item_dimen"

        android:layout_alignParentRight="true">

    </ImageView>
</android.support.v7.widget.CardView>